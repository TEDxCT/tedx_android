<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape xmlns:android="http://schemas.android.com/apk/res/android" >
            <solid android:color="@color/standard_clickable_area_pressed_background" />
        </shape>
    </item>
    <item  android:state_enabled="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" >
            <solid android:color="@color/standard_clickable_area_disabled_background" />
        </shape>
    </item>
    <item >
        <shape xmlns:android="http://schemas.android.com/apk/res/android" >
            <solid android:color="@color/standard_clickable_area_default_background" />
        </shape>
    </item>

</selector>