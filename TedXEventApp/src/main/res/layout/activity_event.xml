<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.tedx.capetown.app.presentation.activity.EventActivity">

    <ImageView
        android:id="@+id/event_picture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/event_image"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/event_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/event_picture"
        android:text="Talk Title"
        android:textStyle="bold" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add to Calendar"
        android:id="@+id/add_to_calendar"
        android:layout_gravity="right"
        android:layout_below="@+id/event_picture"
        android:layout_alignEnd="@+id/event_picture" />

    <TextView
        android:id="@+id/event_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/add_to_calendar"
        android:text="Date"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/event_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/event_date"
        android:text="Time"
        android:textStyle="bold" />

    <fragment
        android:id="@+id/event_map"
        class="com.google.android.gms.maps.MapFragment"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@+id/event_time"/>

    <TextView
        android:id="@+id/event_address1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/event_time"
        android:layout_toRightOf="@+id/event_map"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:text="Address line 1"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/event_address2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/event_map"
        android:layout_below="@+id/event_address1"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:text="Address line 2"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/event_gps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/event_map"
        android:layout_below="@+id/event_address2"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:text="GPS location"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/event_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/event_map"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:text="General event information"
        android:textStyle="bold" />

</RelativeLayout>
