<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tedx.capetown.app.presentation.fragment.EventFragment"
    style="@style/CardViewHolder">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/top_relative_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/CardView.Standard">

            <TextView
                android:id="@+id/host_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Host name"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
            <TextView
                android:id="@+id/event_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Event name"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@id/host_name"
                android:layout_marginTop="@dimen/fragment_event_margin_text_view"/>
            <TextView
                android:id="@+id/event_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Date"
                android:layout_below="@+id/event_name"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="@dimen/fragment_event_margin_text_view"/>

            <TextView
                android:id="@+id/event_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Time"
                android:layout_below="@+id/event_name"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/fragment_event_margin_text_view"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/image_linear_layout"
            style="@style/CardView.Standard"
            android:layout_below="@+id/top_relative_layout">
            <ImageView
                android:id="@+id/event_picture"
                android:layout_width="match_parent"
                android:layout_height="@dimen/fragment_event_image_size_height"
                android:src="@drawable/splash"
                android:scaleType="fitCenter"
                android:layout_gravity="center"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/maps_linear_layout"
            android:layout_below="@id/image_linear_layout"
            style="@style/CardView.Standard">

            <FrameLayout
                android:id="@+id/event_map"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>
            <TextView
                android:id="@+id/event_address1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Address line 1"
                android:layout_below="@+id/event_map" />

            <TextView
                android:id="@+id/event_address2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:text="Address line 2"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_below="@+id/event_address1" />

            <TextView
                android:id="@+id/event_gps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:text="GPS location"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_below="@+id/event_address2"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/maps_linear_layout"
            style="@style/CardView.Standard"
            android:id="@+id/description_linear_layout">

            <TextView
                android:id="@+id/event_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="General event information"
                android:textAppearance="?android:attr/textAppearanceSmall" />
        </LinearLayout>

    </RelativeLayout>

</ScrollView>