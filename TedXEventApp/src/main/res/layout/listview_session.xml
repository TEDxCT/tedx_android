<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    style="@style/CardView.Rounded"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/listview_session_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.Title.Medium"
            android:text="@string/listview_session_default_time"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_for_headers"/>
        <TextView
            android:id="@+id/listview_session_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.Title.Medium"
            android:text="@string/listview_session_default_time"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
        </LinearLayout>

    <TextView
        android:id="@+id/listview_session_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.Title.Small"
        android:text="@string/listview_session_default_session"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/listview_session_position"
        android:layout_centerVertical="true"/>
</LinearLayout>